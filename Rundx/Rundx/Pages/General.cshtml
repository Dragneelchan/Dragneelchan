@page
@model Rundx.Pages.GeneralModel
@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Policy Management Interface</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                text-align: center;
            }

            .container {
                max-width: 400px;
                margin: 0 auto;
            }

            .form-group {
                margin-bottom: 20px;
            }

            label {
                display: block;
                font-weight: bold;
            }

            input[type="text"] {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .button-group {
                display: flex;
                justify-content: space-between;
            }

            .button {
                padding: 10px 20px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

            .export {
                background-color: #4CAF50;
                color: white;
            }

            .import {
                background-color: #3498db;
                color: white;
            }

            .save {
                background-color: #e74c3c;
                color: white;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <h1>Policy Management Interface</h1>
            <div class="form-group">
                <label for="policyName">Policy Name:</label>
                <input type="text" id="policyName" placeholder="Enter policy name">
            </div>
            <div class="form-group">
                <label for="explanation">Explanation:</label>
                <input type="text" id="explanation" placeholder="Enter explanation">
            </div>
            <div class=".button-group">
                <button class="export">Export</button>
                <button class="import">Import</button>
                <button class="save">Save</button>
            </div>
        </div>
    </body>
    </html>
}
